<Window x:Class="Starter.BugReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ErrorMessage" Background="Beige" MinHeight="240" MaxHeight="450" MinWidth="430" MaxWidth="430" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" SizeToContent="WidthAndHeight" ShowInTaskbar="False">
    <Grid>
        <Grid Background="Beige" Height="180" VerticalAlignment="Top">
            <Label Name="label" Content="" Height="100" Width="300" FontSize="14"/>
            <Button Name="btOK" Content="确定" Click="btOK_Click"  Width="75" Margin="0,0,20,5" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
        </Grid>
        <Border BorderBrush="DarkGray" BorderThickness="1" Margin="2,200,2,5">
            <Expander Header="详细信息" >
                <RichTextBox VerticalScrollBarVisibility="Auto" Background="Beige" IsReadOnly="True">
                    <FlowDocument>
                        <Paragraph>
                            <Run Name="runmessage" Text="23"/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
            </Expander>
        </Border>
    </Grid>
</Window>

